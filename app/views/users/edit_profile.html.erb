         <%= f.label :age %><br>
         <%= f.number_field :age %><br>
         <%= f.label :school %><br>
         <%= f.text_field :school %><br>
         <%= f.label :college %><br>
         <%= f.text_field :college %><br>
         <%= f.label :work %><br>
         <%= f.text_field :work %><br>
         <%= f.label :number %><br>
