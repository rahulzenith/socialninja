<!DOCTYPE html>
<html>
  <head>
    <title>Connecti</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' ,  'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
  </head>

  <body>
  	<div id="common-header">
  		<div class='logo animated bounce infinite'>
  			<img width="45" src="https://lh3.googleusercontent.com/J41hsV2swVteoeB8pDhqbQR3H83NrEBFv2q_kYdq1xp9vsI1Gz9A9pzjcwX_JrZpPGsa">
  		</div>
      <div id="site-name">
        <p> <%= link_to 'connecti', root_path %>  </p>
      </div>

  		<div class='auth-info-links'>
  			<% if user_signed_in? %>
  			<p class="email"><%= current_user.email %></p>
  			<p class="signout"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></p>

  			<% else %>

  				<p class="sign-in"><%= link_to "Sign In", new_user_session_path %></p>
  				<p class="sign-up"><%= link_to "Sign Up", new_user_registration_path %></p>
  			<% end %>
  		</div>
      <% if user_signed_in? %>
      <div> <%= link_to 'profile', profile_path(current_user.id) %></div>
      <% end %>
  	</div>



    <%= yield %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
              new WOW().init();
    </script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
  </body>
</html>






