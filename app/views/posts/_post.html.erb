<li id="post-<%= post.id %>" class="wow animated fadeInUp post_content">
               <div id="post-data">
                  <p class="user-email"> By- <%= post.user.email %></p>
                  <p class="user-content"><%= post.content%></p>
                  <div id="delete-likes">
                     <% if user_signed_in? %>
                     <div class="likes">
                        <p class="like-button"><%= link_to post.like_status_string(current_user.id), toggle_like_path(post.id), method: :post %> </p>
                        <p class="like-counter">	<%= post.likes.length %> people like this. </p>
                        <% else %>
                        <p><%= post.likes.length %> Likes </p>
                        <% end %>
                     </div>
                     <% if user_signed_in? && post.user_id ==  current_user.id %>
                     <p class="post-delete"><%= link_to "Delete", destroy_post_path(post.id), method: :delete, remote: true %></p>
                     <% end %>
                  </div>
               </div>
               <div id="comment">
                  <h5>Add Comment</h5>
                  <% if user_signed_in? %>
                  <%= form_for @comment do |f| %>
                  <%= f.hidden_field :post_id, value: post.id %>
                  <%= f.text_area :content , value:"Comment something here.." %>
                  <%= f.submit %>
                  <% end %>
                  <% end %>
                  <ul>
                     <% post.comments.reverse.each do |comment| %><br>
                     <li id="comment_content">
                        <p style="color:black;font-weight:bold;"><%= comment.content %> </p>
                        <div>
                           <p> by- <%= comment.user.email %></p>
                           <% if user_signed_in? && comment.user_id ==  current_user.id %>
                           <p><%= link_to "Delete", destroy_comment_path(comment.id), method: :delete %></p>
                           <% end %>
                        </div>
                     </li>
                     <% end %>
                  </ul>
               </div>
            </li>